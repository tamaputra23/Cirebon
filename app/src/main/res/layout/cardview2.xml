<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="330dp"
    android:layout_height="125dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="horizontal">
        <androidx.cardview.widget.CardView
            android:layout_width="105dp"
            android:layout_height="85dp"
            app:cardCornerRadius="20dp"
            android:layout_gravity="center_vertical">
            <ImageView
                android:id="@+id/iv_cardview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/keraton_kesepuhan"
                android:scaleType="fitXY"/>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_marginLeft="5dp">
            <TextView
                android:id="@+id/tv_cardnama"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cirebon Waterland Taman Ade Irma Suryani"
                android:textColor="@android:color/black"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/tv_cardalamat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jl. Kasepuhan, Kec. Lemahwungkuk"
                android:textColor="@android:color/black"
                android:textSize="12sp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <LinearLayout
                    android:layout_width="70dp"
                    android:layout_height="35dp"
                    android:orientation="horizontal"
                    android:background="@drawable/strokeblue"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/star"/>
                    <TextView
                        android:id="@+id/tv_cardrating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="19sp"
                        android:textStyle="bold"
                        android:textColor="#469FD9"
                        android:text="4.4"/>
                </LinearLayout>
               <Button
                   android:id="@+id/btn_navigasi"
                   android:layout_width="110dp"
                   android:layout_height="30dp"
                   android:text="@string/navigasi"
                   android:textSize="14sp"
                   android:textColor="@android:color/white"
                   android:background="@drawable/roundedtn2"
                   android:layout_marginLeft="10dp"
                   android:layout_gravity="center_vertical"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:src="@drawable/dottedline"
        android:layerType="software" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:id="@+id/tvkoorlat"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:id="@+id/tvkoorlong"/>
</LinearLayout>