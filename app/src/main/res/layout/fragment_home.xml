<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment"
    android:orientation="vertical">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.synnapps.carouselview.CarouselView
            android:id="@+id/carouselView"
            android:layout_width="match_parent"
            android:layout_height="340dp"
            app:autoPlay="true"
            app:fillColor="#FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:pageColor="#00000000"
            app:radius="5dp"
            app:strokeColor="#FFFFFF"
            app:strokeWidth="1dp">
        </com.synnapps.carouselview.CarouselView>

        <EditText
            android:id="@+id/editText1"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/strokonly"
            android:drawableLeft="@drawable/search"
            android:textSize="20sp"
            android:hint="@string/home_search"
            android:padding="10dp"
            android:inputType="textFilter"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/roundedup"
        android:layout_marginTop="-20dp"
        app:layout_constraintTop_toBottomOf="@+id/carouselView">
        <ImageView
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:src="@drawable/cirebon"
            android:scaleType="fitXY"
            android:layout_gravity="center"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_marginTop="10dp">
            <LinearLayout
                android:id="@+id/btn_wisata"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:background="@drawable/roundedbtn">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/map1"
                    android:scaleType="fitXY"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/btn_belanja"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_marginLeft="20dp"
                android:background="@drawable/roundedbtn">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/cart"
                    android:scaleType="fitXY"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/btn_kuliner"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_marginLeft="20dp"
                android:background="@drawable/roundedbtn">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/food"
                    android:scaleType="fitXY"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/btn_transportasi"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_marginLeft="20dp"
                android:background="@drawable/roundedbtn">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/bus"
                    android:scaleType="fitXY"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/btn_hospital"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_marginLeft="20dp"
                android:background="@drawable/roundedbtn">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/hospital1"
                    android:scaleType="fitXY"/>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tempat_wisata_popular"
            android:textSize="24sp"
            android:textColor="@android:color/black"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="25dp"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal">
                    <LinearLayout
                        android:layout_width="165dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <androidx.cardview.widget.CardView
                            android:layout_width="165dp"
                            android:layout_height="140dp"
                            app:cardCornerRadius="20dp">
                            <ImageView
                                android:id="@+id/mesjid"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/mesjid_siratal_mustaqqim"
                                android:scaleType="center"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Mesjid Siratal Mustaqim"
                                android:textColor="@android:color/white"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:layout_gravity="bottom"
                                android:layout_marginBottom="10dp"
                                android:layout_marginLeft="5dp"/>
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:layout_width="165dp"
                            android:layout_height="140dp"
                            app:cardCornerRadius="20dp"
                            android:layout_marginTop="10dp">
                            <ImageView
                                android:id="@+id/hotel"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/swiss_belhotel"
                                android:scaleType="center"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Bell Swiss Hotel"
                                android:textColor="@android:color/white"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:layout_gravity="bottom"
                                android:layout_marginBottom="10dp"
                                android:layout_marginLeft="5dp"/>
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:layout_width="165dp"
                            android:layout_height="140dp"
                            app:cardCornerRadius="20dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="50dp">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/goa_sunyaragi"
                                android:id="@+id/goa"
                                android:scaleType="center"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Goa Sunyaragi"
                                android:textColor="@android:color/white"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:layout_gravity="bottom"
                                android:layout_marginBottom="10dp"
                                android:layout_marginLeft="5dp"/>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="165dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="20dp">
                        <androidx.cardview.widget.CardView
                            android:layout_width="165dp"
                            android:layout_height="140dp"
                            app:cardCornerRadius="20dp">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/kota_cirebon"
                                android:id="@+id/stasiun"
                                android:scaleType="fitXY"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Stasiun Cirebon"
                                android:textColor="@android:color/white"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:layout_gravity="bottom"
                                android:layout_marginBottom="10dp"
                                android:layout_marginLeft="5dp"/>
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:layout_width="165dp"
                            android:layout_height="140dp"
                            app:cardCornerRadius="20dp"
                            android:layout_marginTop="10dp">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/pantai_kejawanan"
                                android:id="@+id/pantai"
                                android:scaleType="center"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Pantai Kejayanan"
                                android:textColor="@android:color/white"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:layout_gravity="bottom"
                                android:layout_marginBottom="10dp"
                                android:layout_marginLeft="5dp"/>
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:layout_width="165dp"
                            android:layout_height="140dp"
                            app:cardCornerRadius="20dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="70dp">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/keraton_kesepuhan"
                                android:id="@+id/keraton"
                                android:scaleType="fitXY"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Keraton Kesepuhan"
                                android:textColor="@android:color/white"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:layout_gravity="bottom"
                                android:layout_marginBottom="10dp"
                                android:layout_marginLeft="5dp"/>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>