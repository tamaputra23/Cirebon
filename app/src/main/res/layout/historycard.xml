<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="250dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="20dp"
    android:elevation="5dp"
    android:layout_marginBottom="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="145dp"
            android:src="@drawable/populer1"
            android:scaleType="fitXY"
            android:id="@+id/iv_historycard"/>
        <TextView
            android:id="@+id/tv_historytittle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:text="Keraton Kesepuhan"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_historyalamat"
            android:textColor="@android:color/black"
            android:text="lorem ipsum"
            android:textSize="13sp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"/>
        <LinearLayout
            android:id="@+id/ll_rating"
            android:layout_width="70dp"
            android:layout_height="35dp"
            android:orientation="horizontal"
            android:background="@drawable/strokeblue"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/star"/>
            <TextView
                android:id="@+id/tv_historyrating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="19sp"
                android:textStyle="bold"
                android:textColor="#469FD9"
                android:text="4.4"/>
        </LinearLayout>
        <Button
            android:id="@+id/btn_historynavigasi"
            android:layout_width="110dp"
            android:layout_height="30dp"
            android:text="@string/navigasi"
            android:textSize="14sp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:textColor="@android:color/white"
            android:background="@drawable/roundedtn2"
            android:layout_gravity="center_vertical"
            android:visibility="gone"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_historyid"
            android:visibility="invisible"/>
    </LinearLayout>

</androidx.cardview.widget.CardView>